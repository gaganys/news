<views:BaseWindow x:Class="NewsClient.Views.AuthWindow"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:views="clr-namespace:NewsClient.Views"
        Title="Аутентификация" Height="350" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 0: Email Label -->
            <RowDefinition Height="Auto"/>
            <!-- 1: Email TextBox -->
            <RowDefinition Height="10"/>
            <!-- 2: Spacer -->
            <RowDefinition Height="Auto"/>
            <!-- 3: Password Label -->
            <RowDefinition Height="Auto"/>
            <!-- 4: Password Box -->
            <RowDefinition Height="10"/>
            <!-- 5: Spacer -->
            <RowDefinition Height="Auto"/>
            <!-- 6: Repeat Password Container -->
            <RowDefinition Height="10"/>
            <!-- 7: Spacer -->
            <RowDefinition Height="Auto"/>
            <!-- 8: Buttons -->
        </Grid.RowDefinitions>

        <!-- Email -->
        <TextBlock Grid.Row="0" Text="Email" Foreground="Gray" VerticalAlignment="Center" Margin="5,0,0,0" FontWeight="Bold"/>
        <TextBox Grid.Row="1" x:Name="txtEmail" Height="30" Margin="0,0,0,0" VerticalAlignment="Center" Padding="5"
                 BorderBrush="#B0B0B0" BorderThickness="1" HorizontalAlignment="Stretch"/>

        <!-- Password -->
        <TextBlock Grid.Row="3" Text="Пароль" Foreground="Gray" VerticalAlignment="Center" Margin="5,0,0,0" FontWeight="Bold"/>
        <PasswordBox Grid.Row="4" x:Name="txtPassword" Height="30" Margin="0,0,0,0" Padding="5" 
                     BorderBrush="#B0B0B0" BorderThickness="1" HorizontalAlignment="Stretch"/>

        <!-- Повторный пароль (только при регистрации) -->
        <Grid Grid.Row="6" x:Name="RepeatPasswordContainer" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="Повторите пароль" Foreground="Gray" VerticalAlignment="Center" Margin="5,0,0,0" FontWeight="Bold"/>
            <PasswordBox Grid.Row="1" x:Name="txtRepeatPassword" Height="30" Margin="0,5,0,0" Padding="5" 
                         BorderBrush="#B0B0B0" BorderThickness="1" HorizontalAlignment="Stretch"/>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Вход" Width="120" Margin="10" Click="Login_Click" Background="#4CAF50" Foreground="White"
                    BorderBrush="#4CAF50" BorderThickness="1" Padding="10,5"/>
            <Button Content="Регистрация" Width="120" Margin="10" Click="Register_Click" Background="#2196F3" Foreground="White"
                    BorderBrush="#2196F3" BorderThickness="1" Padding="10,5"/>
        </StackPanel>
    </Grid>
</views:BaseWindow>